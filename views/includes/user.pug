if user
  div
    h1.text-white.text-center Hi #{user.name}!
    div.text-center 
      a(href="/logout") Log Out
else
  .col-sm-8.col-md-8.col-lg-7.col-lg-offset-2
    form#hloginform.navbar-form.hidden-xs(action='/login', method='post')
      .row
        .form-group.login-mail
          label.sr-only(for='login-mail') email
          input#login-mail.form-control(type='email', name='username', placeholder='email')
        .form-group
          label.sr-only(for='login-pass') Password
          input#login-pass.form-control(type='password', name='password', placeholder='Password')
        input#accede-button.btn.btn-sm.btn-acceder(type='submit', value='Log In')
        span.login-o.text-white o
        button.btn.btn-sm.btn-registro(type='button', onclick="location.href='/register'") Sign Up
    .pull-right.margin-top-right
      a.btn.btn-sm.btn-acceder.visible-xs-inline-block(href='/login') Login
      span.login-o.text-white.visible-xs-inline-block o
      a.btn.btn-sm.btn-registro.visible-xs-inline-block(href='/register') Sign up